                                <p class="step-description">
                                    Pastabos kaip išvirti bulves
                                </p>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary">Baigta</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default recipe-step">
            <div class="panel-heading">
                <h3 class="panel-title">Supjaustyti morkas</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-2 text-center">
                        <img src="{{ asset('assets/images/test_images/step-carrots.png') }}" alt="Supjaustyti morkas" />
