{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}">
{% endblock %}

{% block header %}
    <header>
        <a href="{{ path('cts_recipes_homepage') }}"><h1>CookTimeSaver | <span>00:20</span></h1></a>
    </header>
{% endblock %}

{% block body %}
    <div class="recipe-title">
        {{ recipe.title }}
    </div>
    <div id="make-recipe" data-recipe-image="{{ asset('uploads/recipe_images/large/' ~ recipe.img) }}" data-recipe-id="{{ recipe.id }}">
        <div class="container">
            <div id="currently-making-steps">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="steps-block-title">Vykdomi žingsniai:</h2>
                    </div>
                </div>
                <div class="steps-container"></div>
            </div>
            <div id="steps-queue">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="steps-block-title">Šiuo metu galite pradėti daryti:</h2>
                    </div>
                </div>
                <div class="steps-container"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/make_food.js') }}"></script>
{% endblock %}