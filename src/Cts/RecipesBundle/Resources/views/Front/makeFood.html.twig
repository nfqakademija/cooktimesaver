{% extends '::base.html.twig' %}

{% block header %}
    <header>
        <a href="{{ path('cts_recipes_homepage') }}"><h1>CookTimeSaver | <span>Recepto gamyba</span></h1></a>
    </header>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/tooltipster.css') }}">
{% endblock %}

{% block body %}
    <div class="recipe-title">
        <h1>{{ recipe.title }}</h1>
        <div class="recipe-description">
            <a href="#" id="recipe-desc-trigger">
                <img src="{{ asset('assets/images/make-step-dropdown.png') }}" alt="Drop down" />
            </a>
            <div class="desc">
                <p>
                    {{ recipe.description }}
                </p>
            </div>
        </div>
    </div>
    <div id="make-recipe" data-recipe-image="{{ asset('uploads/recipe_images/large/' ~ recipe.img) }}" data-recipe-id="{{ recipe.id }}">
        <div class="container">
            <div class="row progress-row">
                <div class="col-md-1 text-center">
                    <span id="progress-bar-span" data-steps-count="{{ steps_count }}">0/{{ steps_count }}</span>
                </div>
                <div class="col-md-11">
                    <div id="steps-progress">
                        <div class="progress-line"></div>
                    </div>
                </div>
            </div>
            <div id="currently-making-steps">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="steps-block-title">Recepto Å¾ingsniai:</h2>
                    </div>
                </div>
                <div class="steps-container clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/jquery.color.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.tooltipster.min.js') }}"></script>
    <script src="{{ asset('assets/js/jQueryRotateCompressed.js') }}"></script>
    <script src="{{ asset('assets/js/make_food.js') }}"></script>
{% endblock %}