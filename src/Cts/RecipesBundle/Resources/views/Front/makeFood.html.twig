<div id="make-recipe">
    <div class="container">
        <div class="row">
            <h1 class="text-center">Gaminti liko: 19:59</h1>
        </div>
        <div class="panel panel-default recipe-step">
            <div class="panel-heading">
                <h3 class="panel-title">Išvirti bulves</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-2 text-center">
                        <img src="{{ asset('assets/images/test_images/step-potatoes.png') }}" alt="Išvirti bulves" />
